<?xml version="1.0"?>
<odoo>

    <data>
        <record id="balance_general_reporte_wizard_form" model="ir.ui.view">
            <field name="name">balance.general.reporte.wizard.form</field>
            <field name="model">balance.general.reporte.wizard</field>
            <field name="arch" type="xml">
            <form string="Imprimir Plan Contable">
              <group name="main">
                <group name="main_left">
                    <field name="year" />
                    <field name="month" />
                    <hr/>
                    <field name="downloadable_file_name"/>
                  </group>
                <group name="main_right">
                    <field name="currency" widget="radio"/>
                    <field name="unit" widget="radio"/>
                </group>
              </group>
              <footer>
                <button name="save_to_file" type="object"
                  string="Descargar" class="oe_highlight"  icon="fa-download"/>
                <button  special="cancel" string="Cancel"/>
              </footer>
            </form>
            </field>
          </record>
  
          <record id="balance_general_reporte_wizard_action" model="ir.actions.act_window">
              <field name="name">Balance General</field>
              <field name="res_model">balance.general.reporte.wizard</field>
              <field name="view_mode">form</field>
              <field name="view_id" ref="balance_general_reporte_wizard_form"/>
              <field name="target">new</field>
          </record>
  
    </data>

</odoo>